<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_light_background"
        tools:context="filmoteka.norles.github.com.filmoteka.activities.TvDetailActivity"
        tools:showIn="@layout/activity_tv_detail">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        <ImageView
                android:id="@+id/tv_detail_thumbnail"
                android:layout_width="@dimen/detail_image_width"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/placeholder"
                />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tv_detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/movie_detail_title_size"
                    android:textColor="@color/black"
                    android:text="@string/default_tv_name"/>

            <TextView
                    android:id="@+id/tv_detail_seasons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/movie_detail_text_size"
                    android:text="@string/default_tv_seasons"/>

            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:id="@+id/tv_detail_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/movie_detail_text_size"
                        android:textColor="@color/black"
                        android:text="@string/default_tv_desc"/>
            </ScrollView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>